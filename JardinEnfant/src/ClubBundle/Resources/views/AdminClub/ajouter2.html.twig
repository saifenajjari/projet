{% extends "baseadmin.html.twig" %}






{% block content %}
    <div class="container">

        <h1 class="mb-4" style="color: mediumvioletred " align="center" font-family="arial"> Formulaire  </h1>




        {#  {{ form_start(form) }}
          {{ form_widget(form) }}
