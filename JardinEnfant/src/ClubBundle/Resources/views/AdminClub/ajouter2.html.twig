            <label for="text">Age minimum : </label>
            {{ form_widget(form.agemin,{ 'id': 'ageMin'} }) }}
        </div>
        <div class="form-group">
            <label for="text">Age maximum : </label>
            {{ form_widget(form.agemax,{ 'id': 'ageMax'}) }}
        </div>
        <div class="form-group">
            <label for="text">Jours : </label>
            {{ form_widget(form.jours,{ 'id': 'jours'}) }}
        </div>
        <div class="form-group">
            <label for="text">heure de debut : </label>
            {{ form_widget(form.heured, { 'id': 'heureD'}) }}
        </div>
        <div class="form-group">
            <label for="text">heure de fin : </label>
            {{ form_widget(form.heuref, { 'id': 'heureF'}) }}
        </div>
        <div class="form-group">
            <label for="text">Nombre Des Places Disponibles : </label>
            {{ form_widget(form.nbDispo, { 'id': 'place'}) }}
        </div>
        <div class="form-group">
            <label for="text">Montant a payer /mois : </label>
            {{ form_widget(form.montantp, { 'id': 'montant'}) }}
        </div>
        {{ form_widget(form.Ajouter, { 'attr': {'class': 'btn btn-primary'} }) }}

        {{ form_end(form) }}
        <a href="{{ path('club_afficher2') }}"> <button class="btn btn-secondary">Retour</button></a>

    </div>


